{{> errorDiv}}
{{#ifAdmin}}
<form action="/users" method="post">
    <div class="edit_photo">
        <img src="/images/general/default-user.png" class="profile" title="{{t 'user.profile.avatar.title'}}"/>
    </div>
    <div class="fields">

        <div class="row">
               <span class="left">
                   <label class="required">{{t "users.first_name"}}</label>
                   <input type="text" name="firstName" maxlength="256" value="{{firstName}}"/>
               </span>

               <span class="right">
                   <label class="required">{{t "users.last_name"}}</label>
                   <input type="text" name="lastName" maxlength="256" value="{{lastName}}"/>
               </span>
        </div>

        <div class="row">
               <span class="left">
                   <label class="required">{{t "users.username"}}</label>
                   <input type="text" name="username" maxlength="256" value="{{username}}"/>
               </span>

               <span class="right admin">
                   <label class="placeholder"></label>
                   <label>
                       <input type="checkbox" name="admin" id="admin-checkbox" {{#if admin}}checked{{/if}}/>
                       {{t "users.make_admin"}}
                   </label>
               </span>
        </div>

        <div class="row">
               <span class="left">
                   <label class="required">{{t "users.email"}}</label>
                   <input type="text" name="email" maxlength="256" value="{{email}}"/>
               </span>

               <span class="right admin">
                   <label class="placeholder"></label>
                   <label>
                       <input type="checkbox" name="developer" id="developer-checkbox" {{#if developer}}checked{{/if}}/>
                       {{t "users.make_developer"}}
                   </label>
               </span>
        </div>

        <div class="row">
               <span class="left">
                   <label class="required">{{t "users.password"}}</label>
                   <input type="password" name="password" maxlength="256" value="{{password}}" autocomplete="off"/>
               </span>

               <span class="right">
                   <label class="required">{{t "users.confirm_password"}}</label>
                   <input type="password" name="passwordConfirmation" maxlength="256" value="{{passwordConfirmation}}" autocomplete="off"/>
               </span>
        </div>

        <div class="row">
               <span class="left">
                   <label>Title</label>
                   <input type="text" name="title" maxlength="256" value="{{title}}"/>
               </span>

               <span class="right">
                   <label>{{t "users.department"}}</label>
                   <input type="text" name="dept" maxlength="256" value="{{dept}}"/>
               </span>
        </div>

        <div class="row">
               <span class="notes">
                   <label>Notes</label>
                   <textarea rows="4" cols="1" name="notes" maxlength="4096">{{notes}}</textarea>
               </span>
        </div>

        <div class="row form_controls">
               <span class="left">
                   <button type="submit" class="submit modalish">{{t "users.button.add"}}</button>
                   <button type="button" class="cancel modalish">{{t "actions.cancel"}}</button>
               </span>
        </div>
    </div>
</form>
{{else}}
<p class="aint_admin">{{t "users.not_admin"}}</p>
{{/ifAdmin}}
